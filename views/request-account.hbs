<div class="container text-center mx-auto">
  <img style="width: 150px;" class="block mx-auto" src="images/logo.jpg"/>
  <hr>
  <h1 class="text-2xl py-4">Account Assignment</h1>
  <p class="text-base">Enter your name in the form below to request lab access</p>

  <div class="w-full max-w-sm mx-auto mt-4">
    <form class="bg-white rounded px-8 pt-6 pb-8 mb-4" action="/request-account" method="post">
      <div class="mb-4">
        <label class="block text-sm font-bold mb-2" for="realname">
          Name
        </label>
        <input class="text-center shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="realname" id="realname" type="text" placeholder="e.g Jane Doe">
      </div>

      <input value="Submit" class="bg-red-700 hover:bg-red-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
    </form>
  </div>
</div>
